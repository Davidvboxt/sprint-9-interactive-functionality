<%- include('./partials/head') %>

    <section>
        <h1>Alle Boeken</i></h1>
        <div class="search">
            <input class="search-input" type="text" placeholder="Search.." name="search">
            <button class="search-btn" type="submit"><i class="fa fa-search"></i></button>
        </div>
        <button class="pre-btn"><i class="fa-solid fa-circle-right fa-2xl"></i></button>
        <button class="nxt-btn"><i class="fa-solid fa-circle-right fa-2xl"></i></button>
        <div class="read-more-container product-container">
            <% results.forEach(result=> { %>

                <p>
                <article>
                    <img class="boeken-foto" src="<%= result.coverimages %>" alt="boek">
                    <h4>
                        <%= result.frabl.key1 %>
                    </h4>
                    <p class="boek-schrijvers">
                        <%= result.frabl.key2 %>
                    </p>

                    <span class="read-more-text">
                        <span>Info:</span>
                        <p>
                            <%= result.summaries %>
                        </p>

                        <span>Genre:</span>
                        <p>
                            <%= result.genres %>
                        </p>

                        <span>Taal:</span>
                        <p>
                            <%= result.languages %>
                        </p>

                        <span>Aantal pagina's:</span>
                        <p>
                            <%= result.description[0] %>
                        </p>

                    </span>

                    </p>
                    <a href="/detail?id=<%= result.id %>" class="more-details">Meer Details</a>
                </article>

                <% }) %>
        </div>
    </section>


    <%- include('./partials/foot') %>
